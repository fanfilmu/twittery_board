%li
  %h3
    - if event.uploaded?
      %span.label.label-info= t(".uploaded")
    = link_to event.title, event_path(event)

  %p= event.description

  = link_to comments_path(event_id: event.id), class: "pull-right" do
    = t("comments.comments.num_comments", count: event.comments.count)

  .clearfix
